@implements IDisposable

@inject NavigationManager NavigationManager

<nav>
    <a href="/" class="logo">Hotel_reservation</a>
    <div class="nav-links">
        <div><NavLink href="/"><div class="nav-item">Home</div></NavLink></div>
        <div><NavLink href="/about"><div class="nav-item">About us</div></NavLink></div>
        <div><NavLink href="/rooms"><div class="nav-item">Rooms</div></NavLink></div>
        <div><NavLink href="/auth"><div class="nav-item">Authentication Required</div></NavLink></div>
    </div>
</nav>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
